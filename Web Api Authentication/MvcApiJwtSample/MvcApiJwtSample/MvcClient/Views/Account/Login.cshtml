@{
    ViewData["Title"] = "Login";
}
<h2>Login</h2>
<form method="post">
    <div>
        <label>Username</label>
        <input name="username" />
    </div>
    <div>
        <label>Password</label>
        <input name="password" type="password" />
    </div>
    <button type="submit">Login</button>
</form>
<p>Try <code>admin/admin</code> or <code>user/user</code>.</p>
